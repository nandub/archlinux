pkgname=mitmproxy
pkgver=0.9.1
pkgrel=1
pkgdesc="SSL-capable man-in-the-middle HTTP proxy"
arch=(any)
license=('GPL')
url="http://mitmproxy.org/"
depends=(python2 openssl python2-urwid python2-pyasn1 python2-pyopenssl python2-imaging python2-lxml)
source=(http://mitmproxy.org/download/$pkgname-$pkgver.tar.gz)
conflicts=(mitmproxy-git)

package() {
  cd $srcdir/$pkgname-$pkgver/
  python2 setup.py install --root=$pkgdir
}
md5sums=('2ebd39e1118c6dbad8781164d71ee626')
